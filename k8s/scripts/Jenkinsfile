  
 pipeline {
  agent none
           parameters {
        string(name: 'Env', defaultValue: 'poc', description: 'Current environment')
        string(name: 'Environment', defaultValue: 'Development', description: 'Running environment')
        string(name: 'Eks', defaultValue: 'eks', description: 'eks database')
        string(name: 'cicdPath', defaultValue: 'cicd', description: 'CICD directory path')
        string(name: 'ProjectPath', defaultValue: 'k8s', description: 'Project path')
                }

   
  stages {
    stage('get code from source code') {
       agent {
                label 'master'
            }
      
      steps {
                sh 'ls '
                //cleanWs()
                //sh 'ls'
              
      }
       post {
                always {
                    sh "echo Pull source code complete"
                }
           }
    }

          
          
       stage('docker build') {
       agent {
                label 'master'
            }
      
      steps {
        
        
                    dir(path: "${params.ProjectPath}") {
  
                      sh 'docker build -t eoludotun/userservice:$BUILD_NUMBER .'
             
                      
                     // sh "docker images"
                      
                     
                
                  
                     
                }
      }
       post {
                always {
                    sh 'echo "Docker build  complete"'
                }
           }
         
    }     
          

        stage('Integration Test') {
            agent {
                label 'master'
            }
          steps {
            dir(path: "${params.ProjectPath}/scripts") {
            
            
            sh 'ls'
            sh 'cat application.yaml'
            sh '$BUILD_NUMBER'  
              
            //sed s/eoludotun/userservice:00/eoludotun/userservice:$BUILD_NUMBER/g \application.yaml  
            }
          }
            //sed s/eoludotun/userservice:00/$production/g \pod_template.yaml > pod_production.yaml

        stage('Performance Test') {
            agent {
                label 'master'
            }
          steps {
            sh 'pwd'
          }
        

      }
    

    stage('Deploy') {
      when {
        branch 'master'
      }
      steps {
        echo 'Deploying the application....'
        input(message: 'Deploy?', ok: 'Yes')
      }
    }
  }
    

  

